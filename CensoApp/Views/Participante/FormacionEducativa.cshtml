@model CensoApp.Dtos.ParticipanteCreateDto
@{
    ViewData["Title"] = "Formacion Educativa";
}
<div class="container">
    <h1 class="card-title">@ViewData["Title"]</h1>
    <form asp-action="GuardarInformacionParticipante" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <select class="form-control" asp-for="NivelAcademico">
                Formacion
                <option value="Bachiller">Bachiller</option>
                <option value="Universitario">Universitario</option>
                <option value="Superior">Superior</option>
            </select>
        </div>
        <div class="form-group">
            <select class="form-control">
                Nivel de estudios
                <option value="EnProceso">En proceso</option>
                <option value="Completo">Completo</option>
                <option value="Incompleto">Incompleto</option>
            </select>
        </div>
        <div class="form-group">
            <input class="form-control" asp-for="Nombre" placeholder="Nombre(s)..." hidden />
            <span asp-validation-for="Nombre"></span>
        </div>
        <div class="form-group ">
            <input class="form-control" asp-for="Apellido" placeholder="Apellido(s)..." hidden/>
            <span asp-validation-for="Apellido"></span>
        </div>
        <div class="form-group ">
            <input class="form-control" asp-for="TipoCredencial" placeholder="Tipo credencial..."hidden/>
            <span asp-validation-for="TipoCredencial"></span>
        </div>
        <div class="form-group ">
            <input class="form-control" asp-for="Credencial" placeholder="Credencial..." hidden/>
            <span asp-validation-for="Credencial"></span>
        </div>
        <div class="form-group ">
            <input class="form-control" asp-for="Email" placeholder="Correo electronico..." hidden/>
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group ">
            <input class="form-control" asp-for="FechaNacimiento" type="datetime" hidden />
            <span asp-validation-for="FechaNacimiento"></span>
        </div>
        <div class="form-group ">
            <input class="form-control" asp-for="Edad" type="number" hidden />
        </div>
        <div class="form-group ">
            <input class="form-control" asp-for="Direccion" placeholder="Direccion: Calle/Sector/Municipio..." hidden/>
        </div>
        <div class="form-group ">
            <input class="form-control" asp-for="Telefono" type="tel" placeholder="Telefono..."hidden />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Guardar y Finzalizar</button>
        </div>
    </form>
</div>


